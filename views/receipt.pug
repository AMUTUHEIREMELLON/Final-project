doctype html
head
  link(rel='stylesheet' href='/css/bootstrap.css')
  link(rel='stylesheet' href='/css/receipt.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

.receipt
  h1 A receipt
  p Name: #{car.firstname} #{car.lastname}  
  p Model: #{car.model}
  p Time: #{car.time}
  p Date: #{car.date}
  p Number Plate: #{car.numberplate}
  p Car type: #{car.cartype}
  p Color: #{car.color}
  p Services: #{car.services}
  p Cost: #{car.cost}